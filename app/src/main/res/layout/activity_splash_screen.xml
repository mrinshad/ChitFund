<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/Secondary">

    <TextView
        android:id="@+id/TextViewKuri"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="78dp"
        android:text="KURI MANAGER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="88px"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/TextViewApp1"
        android:layout_width="153px"
        android:layout_height="100px"
        android:layout_below="@+id/TextViewKuri"
        android:layout_alignEnd="@+id/TextViewKuri"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-1dp"
        android:text="App"
        android:textColor="@color/Primary"
        android:textSize="79px" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewApp1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="110dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progressTint="@color/Primary"
        android:progress="1"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar"
        android:textColor="@color/Primary"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="3dp" />

</RelativeLayout>